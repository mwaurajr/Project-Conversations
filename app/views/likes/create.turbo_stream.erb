<turbo-stream action="replace" target="<%= dom_id(@comment, :likes) %>">
  <template>
    <div id="<%= dom_id(@comment, :likes) %>" class="flex items-center">
      <%= button_to comment_like_path(@comment, @like), method: :delete, class: "text-xs text-red-600 flex items-center" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd" />
        </svg>
        <span><%= @comment.likes.count %></span>
      <% end %>
    </div>
  </template>
</turbo-stream>
