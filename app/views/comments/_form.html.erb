<%= form_with model: [project, comment], class: "bg-white p-4 rounded border" do |f| %>
  <div class="mb-4">
    <%= f.text_area :content, placeholder: "Write a comment...", rows: 3, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50" %>
  </div>
  
  <div class="mb-4">
    <%= f.label :image, "Attach image (optional)", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.file_field :image, class: "block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100" %>
  </div>
  
  <div class="flex justify-end">
    <%= f.submit "Post comment", class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
  </div>
<% end %>
